{{template "base" .}}

{{define "title"}}Create a New Snippet{{end}}

{{define "main"}}
<form action='/snippet/create' method='POST' enctype='application/x-www-form-urlencoded'>
    <div>
        <label>Título:</label>
        {{with .FormErrors.title}}
        <label class='error'>{{.}}</label>
        {{end}}
        <input type='text' name='title' value='{{.FormData.Get "title"}}'>
    </div>
    <div>
        <label>Conteúdo:</label>
        {{with .FormErrors.content}}
        <label class='error'>{{.}}</label>
        {{end}}
        <textarea name='content'>{{.FormData.Get "content"}}</textarea>
    </div>
    <div>
        <label>Deletar em:</label>
        {{with .FormErrors.expires}}
        <label class='error'>{{.}}</label>
        {{end}}
        {{$exp := or (.FormData.Get "expires") "365"}}
        <input type='radio' name='expires' value='365' {{if (eq $exp "365")}}checked{{end}}> Um Ano
        <input type='radio' name='expires' value='7' {{if (eq $exp "7")}}checked{{end}}> Uma Semana
        <input type='radio' name='expires' value='1' {{if (eq $exp "1")}}checked{{end}}> Um Dia
    </div>
    <div>
        <input type='submit' value='Publicar snippet'>
    </div>
</form>
{{end}}
